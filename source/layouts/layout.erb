<% language_tabs = current_page.data.language_tabs || [] %>
<% intro_page_content = yield %>
<% intro_page_quick_links = yield %>
<% api_page_content = yield %>
<% module_page_content = yield %>
<% guides_page_content = yield %>
<%
  if current_page.data.intro_quick_links
    current_page.data.intro_quick_links.each do |include|
      intro_page_quick_links += partial("includes/#{include}")
    end
  end
%>
<%
  if current_page.data.intro_includes
    current_page.data.intro_includes.each do |include|
      intro_page_content += partial("includes/#{include}")
    end
  end
%>
<%
  if current_page.data.api_includes
    current_page.data.api_includes.each do |include|
      api_page_content += partial("includes/#{include}")
    end
  end
%>
<%
  if current_page.data.module_includes
    current_page.data.module_includes.each do |include|
      module_page_content += partial("includes/#{include}")
    end
  end
%>
<%
  if current_page.data.guides_includes
    current_page.data.guides_includes.each do |include|
      guides_page_content += partial("includes/#{include}")
    end
  end
%>

<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title><%= current_page.data.title || "API Documentation" %></title>
    <%= favicon_tag 'https://cdn.basistheory.com/images/favicons/favicon.ico' %>

    <style media="screen">
      <%= Rouge::Themes::MonokaiSublimeSlate.render(:scope => '.highlight') %>
    </style>
    <style media="print">
      * {
        transition:none!important;
      }
      <%= Rouge::Themes::Base16::Solarized.render(:scope => '.highlight') %>
    </style>
    <%= stylesheet_link_tag :screen, media: :screen %>
    <%= stylesheet_link_tag :home, media: :screen %>
    <%= stylesheet_link_tag :guides, media: :screen %>
    <script src="https://kit.fontawesome.com/86c3cd0147.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag :print, media: :print %>
    <% if current_page.data.search %>
      <%= javascript_include_tag  "all" %>
    <% else %>
      <%= javascript_include_tag  "all_nosearch" %>
    <% end %>

    <% if current_page.data.code_clipboard %>
    <script>
      $(function() { setupCodeCopy(); });
    </script>
    <script defer data-api="https://analytics.basistheory.com/api/event" data-domain="docs.basistheory.com" src="https://cdn.basistheory.com/javascript/analytics.js"></script>
    <% end %>
  </head>

  <body class="<%= page_classes %>" data-languages="<%=h language_tabs.map{ |lang| lang.is_a?(Hash) ? lang.keys.first : lang }.to_json %>">
    <a href="/#" id="nav-button">
      <span>
        NAV
        <%= image_tag('navbar.png') %>
      </span>
    </a>
    <div class="toc-wrapper">

        <div class="toc-header">
            <a href='/'><%= image_tag "logo-with-title.svg", class: 'logo' %></a>


            <%= image_tag current_page.data.docs_logo || "docs.svg", class: 'section-DOCS' %>
        </div>

      <div class="line"></div>

      <% if language_tabs.any? %>
        <div class="lang-selector">
          <% language_tabs.each do |lang| %>
            <% if lang.is_a? Hash %>
              <a href="#" data-language-name="<%= lang.keys.first %>"><%= lang.values.first %></a>
            <% else %>
              <a href="#" data-language-name="<%= lang %>"><%= lang %></a>
            <% end %>
          <% end %>
        </div>
      <% end %>

      <% if current_page.data.search %>
        <div class="search">
          <input type="text" class="search" id="input-search" placeholder="Search...">
        </div>
        <ul class="search-results"></ul>
      <% end %>

      <h1 class="nav-title">Get Started</h1>
      <ul id="toc_intro" class="toc-section toc-list-h1">
        <% toc_data(intro_page_content).each do |h1| %>
          <li>
            <a href="#<%= h1[:id] %>" class="toc-h1 toc-link" data-title="<%= h1[:title] %>"><%= h1[:content] %></a>
            <% if h1[:children].length > 0 %>
              <ul class="toc-list-h2">
                <% h1[:children].each do |h2| %>
                  <li>
                    <a href="#<%= h2[:id] %>" class="toc-h2 toc-link" data-title="<%= h2[:title] %>"><%= h2[:content] %></a>
                  </li>
                <% end %>
              </ul>
            <% end %>
          </li>
        <% end %>
      </ul>


      <% if current_page.data.api_includes %>
        <h1 class="nav-title">Reference</h1>
        <ul id="toc_api" class="toc-section toc-list-h1">
          <% toc_data(api_page_content).each do |h1| %>
            <li>
              <a href="#<%= h1[:id] %>" class="toc-h1 toc-link" data-title="<%= h1[:title] %>"><%= h1[:content] %></a>
              <% if h1[:children].length > 0 %>
                <ul class="toc-list-h2">
                  <% h1[:children].each do |h2| %>
                    <li>
                      <a href="#<%= h2[:id] %>" class="toc-h2 toc-link" data-title="<%= h2[:title] %>"><%= h2[:content] %></a>
                    </li>
                  <% end %>
                </ul>
              <% end %>
            </li>
          <% end %>
        </ul>
      <% end %>

      <% if current_page.data.other_docs %>
        <h1 class="nav-title">Other Docs</h1>
        <ul id="toc_api" class="toc-section toc-list-h1">
          <% current_page.data.other_docs.each do |footer| %>
             <li class="other-docs"><%= footer %></li>
          <% end %>
        </ul>
      <% end %>
      <% if current_page.data.aux_links %>
        <h1 class="nav-title">More</h1>
        <ul id="toc_api" class="toc-section toc-list-h1">
          <% current_page.data.aux_links.each do |footer| %>
            <li><%= footer %></li>
          <% end %>
        </ul>
      <% end %>

      <% if current_page.data.toc_footers %>
        <ul class="toc-footer">
          <% current_page.data.toc_footers.each do |footer| %>
            <li><%= footer %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
    <div class="page-wrapper">
      <% if current_page.data.hide_code != true %>
        <div class="dark-box"></div>
      <% end %>

      <div class="<%= current_page.data.hide_code ? "content no-code-content" : "content" %>">
        <div class="header-border"></div>
        <%= intro_page_content %>
        <%= api_page_content %>
        <%= module_page_content %>
        <%= guides_page_content %>
      </div>
      <% if current_page.data.hide_code != true %>
      <div class="dark-box">
        <% if language_tabs.any? %>
          <div class="lang-selector">
            <% language_tabs.each do |lang| %>
              <% if lang.is_a? Hash %>
                <a href="#" data-language-name="<%= lang.keys.first %>"><%= lang.values.first %></a>
              <% else %>
                <a href="#" data-language-name="<%= lang %>"><%= lang %></a>
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>
      <% end %>
    </div>
  </body>
</html>
